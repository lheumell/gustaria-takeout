---
export interface Props {
  id: number;
  name: string;
  description: string;
  price: number;
  path: string;
  image: TImage;
  allergens: TAllergens[];
  color: string;
}

const { id, path, name, description, price, allergens, image, color } =
  Astro.props;
---

<div class="product-card">
  <div class="bg-image" style={`background-color: ${color};`}>
    <img
      class="product-image"
      src={`http://localhost:1337${image.data[0].attributes.url}`}
      alt=""
    />
  </div>
  <div class="product-content">
    <p class="product-name">{name}</p>
    <!-- <p class="product-description">{description}</p> -->
    <p class="product-price">{price}â‚¬</p>
    <ul class="product-allergen">
      {
        allergens.map((allergen: TAllergens) => (
          <li class="product-allergen-item">{allergen.attributes.name}</li>
        ))
      }
    </ul>
  </div>

  <div class="view-product-btn">
    <a class="href" href={`/menu/${id.toString()}`}>Voir le produit</a>
  </div>
</div>

<style>
  .href {
    color: white;
    text-decoration: none;
  }
  .primary {
    color: #6097bc;
  }
  .secondary {
    color: #e15c45;
  }
  .product-allergen {
    grid-area: 2 / 1 / 3 / 4;
    margin: 0;
    list-style: none;
    padding: 0;
  }
  .product-allergen-item {
    color: #6097bc;
    display: inline;
    margin: 0 5px;
    border: 1px solid #6097bc;
    border-radius: 15px;
    padding: 3px;
  }
  .product-content {
    padding: 20px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
  }
  .bg-image {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 160px;
  }
  .product-card {
    width: 300px;
    border: 5px solid #6097bc;
    border-radius: 5px;
    margin: 10px;
    /* box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2); */
  }
  .product-image {
    height: 115px;
  }

  .product-name {
    color: #6097bc;
    font-weight: bold;
    margin: 0;
    font-size: 18px;
    grid-area: 1 / 1 / 2 / 3;
  }

  .product-description {
    font-size: 16px;
    margin: 0 0 10px 0;
  }

  .product-price {
    text-align: end;
    color: #6097bc;
    font-size: 18px;
    font-weight: bold;
    margin: 0 0 20px 0;
    grid-area: 1 / 3 / 2 / 4;
  }

  .view-product-btn {
    display: flex;
    justify-content: center;
    background-color: #6097bc;
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .view-product-btn:hover {
    background-color: #6097bc;
  }
</style>
